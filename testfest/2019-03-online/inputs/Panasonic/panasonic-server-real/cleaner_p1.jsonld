{
  "@context": [
    "http://www.w3.org/ns/td",
    {
      "iot": "http://iotschema.org/",
      "htv": "http://www.w3.org/2011/http#",
      "om": "http://www.wurvoc.org/vocabularies/om-1.8/"
    }
  ],
  "@type": "Thing",
  "name": "PanasonicCleanerP1",
  "description": "Panasonic's cleaner",
  "descriptions": {
    "en": "Panasonic's cleaner",
